<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ieslosmontecillos.appinforme.MenuController">
   <children>
      <MenuBar>
        <menus>
          <Menu fx:id="lFactura" mnemonicParsing="false" text="Listado facturas">
               <items>
                  <MenuItem mnemonicParsing="false" text="Reporte" onAction="#viewListado" />
               </items></Menu>
          <Menu fx:id="vTotales" mnemonicParsing="false" text="Ventas totales">
               <items>
                  <MenuItem mnemonicParsing="false" text="Reporte" onAction="#viewVentas"/>
               </items></Menu>
          <Menu fx:id="fClientes" mnemonicParsing="false" text="Facturas cliente">
               <items>
                  <MenuItem mnemonicParsing="false" text="Reporte" onAction="#viewCliente"/>
               </items></Menu>
            <Menu fx:id="sFacturas" mnemonicParsing="false" text="Subinforme facturas">
               <items>
                  <MenuItem mnemonicParsing="false" text="Reporte" onAction="#viewSubinforme"/>
               </items></Menu>
        </menus>
      </MenuBar>
   </children>
</VBox>
